# OpenAI API Key (임베딩용)
OPENAI_API_KEY=sk-your-api-key-here

# Gemini API Key (LLM용)
GEMINI_API_KEY=your-gemini-api-key-here

# Database URL (SQLite)
DATABASE_URL=sqlite:///./investment.db

# ChromaDB 저장 경로
CHROMA_DB_PATH=./chroma_db

# Google Sheets API 인증 (선택사항)
# 방법 1: 서비스 계정 JSON 파일 경로
GOOGLE_SERVICE_ACCOUNT_JSON=credentials/service_account.json

# 구글 스프레드시트 ID
GOOGLE_SHEET_ID=your-spreadsheet-id-here  # (deprecated, GOOGLE_SPREADSHEET_ID 사용 권장)
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id-here  # 실행 결과 저장용 스프레드시트 ID
GOOGLE_SETTINGS_SPREADSHEET_ID=your-settings-spreadsheet-id-here  # 설정값 저장용 스프레드시트 ID

# 방법 2: 서비스 계정 JSON 내용 (환경변수로 직접 설정)
# GOOGLE_SERVICE_ACCOUNT_INFO={"type":"service_account","project_id":"..."}

# Telegram Bot Token (선택사항)
TELEGRAM_TOKEN=your-telegram-token-here

# Email Settings (보고서 자동 발송용)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com


